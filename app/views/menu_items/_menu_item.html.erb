<div id="<%= dom_id menu_item %>" class="w-full sm:w-auto my-2 space-y-5">
  <div>
    <span><strong class="block font-medium mb-1">Name:</strong></span>
    <span><%= menu_item.name %></span>
  </div>
  <div>
    <span><strong class="block font-medium mb-1">Price:</strong></span>
    <span><%= number_to_currency(menu_item.price_in_cents / 100.0) %></span>
  </div>
</div>
