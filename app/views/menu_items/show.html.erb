<% content_for :title, "Showing menu item" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl"><%= @menu_item.name %></h1>
  <p class="text-gray-600 mb-4"><%= @restaurant.name %> - <%= @menu.name %></p>

  <%= render @menu_item %>

  <%= link_to "Back to menu items", restaurant_menu_menu_items_path(@restaurant, @menu), class: "w-full sm:w-auto text-center mt-2 sm:mt-0 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= button_to "Remove from Menu", restaurant_menu_menu_item_path(@restaurant, @menu, @menu_item), method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
