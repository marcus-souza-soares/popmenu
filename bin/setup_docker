#!/usr/bin/env bash
set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}╔═══════════════════════════════════════════════════════════╗${NC}"
echo -e "${BLUE}║                                                           ║${NC}"
echo -e "${BLUE}║            🍽️  PopMenu Challenge Setup                    ║${NC}"
echo -e "${BLUE}║            Restaurant Menu Management System              ║${NC}"
echo -e "${BLUE}║                                                           ║${NC}"
echo -e "${BLUE}╚═══════════════════════════════════════════════════════════╝${NC}"
echo ""

# Check if Docker is installed
if ! command -v docker &> /dev/null; then
    echo -e "${RED}❌ Error: Docker is not installed.${NC}"
    echo -e "${YELLOW}Please install Docker from: https://docs.docker.com/get-docker/${NC}"
    exit 1
fi

# Check if Docker Compose is installed
if ! command -v docker compose &> /dev/null; then
    echo -e "${RED}❌ Error: Docker Compose is not installed.${NC}"
    echo -e "${YELLOW}Please install Docker Compose from: https://docs.docker.com/compose/install/${NC}"
    exit 1
fi

echo -e "${GREEN}✅ Docker and Docker Compose are installed${NC}"
echo ""

# Stop any running containers
echo -e "${YELLOW}🛑 Stopping any running containers...${NC}"
docker compose down || true
echo ""

# Build the Docker images
echo -e "${YELLOW}🔨 Building Docker images...${NC}"
docker compose build
echo -e "${GREEN}✅ Docker images built successfully${NC}"
echo ""

# Create the database
echo -e "${YELLOW}🗄️  Creating database...${NC}"
docker compose run --rm app bin/rails db:create
echo -e "${GREEN}✅ Database created${NC}"
echo ""

# Run migrations
echo -e "${YELLOW}📊 Running database migrations...${NC}"
docker compose run --rm app bin/rails db:migrate
echo -e "${GREEN}✅ Migrations completed${NC}"
echo ""

# Seed the database
echo -e "${YELLOW}🌱 Seeding database with sample data...${NC}"
docker compose run --rm app bin/rails db:seed
echo -e "${GREEN}✅ Database seeded${NC}"
echo ""

# Run RuboCop to check code style
echo -e "${YELLOW}🔍 Running RuboCop...${NC}"
docker compose run --rm app bin/rubocop
echo -e "${GREEN}✅ RuboCop check passed${NC}"
echo ""

# Run tests
echo -e "${YELLOW}🧪 Running test suite...${NC}"
docker compose run --rm app bin/rspec
if [ $? -eq 0 ]; then
    echo -e "${GREEN}✅ All tests passed${NC}"
else
    echo -e "${RED}❌ Some tests failed${NC}"
    echo -e "${YELLOW}You can still continue, but you may want to check the failures.${NC}"
fi
echo ""

echo -e "${GREEN}╔═══════════════════════════════════════════════════════════╗${NC}"
echo -e "${GREEN}║                                                           ║${NC}"
echo -e "${GREEN}║              🎉 Setup Complete! 🎉                        ║${NC}"
echo -e "${GREEN}║                                                           ║${NC}"
echo -e "${GREEN}╚═══════════════════════════════════════════════════════════╝${NC}"
echo ""
echo -e "${BLUE}📝 Next steps:${NC}"
echo ""
echo -e "  1. Start the application:"
echo -e "     ${YELLOW}docker compose up${NC}"
echo ""
echo -e "  2. Access the application:"
echo -e "     ${YELLOW}http://localhost:3000${NC}"
echo ""
echo -e "  3. Access the API:"
echo -e "     ${YELLOW}http://localhost:3000/restaurants.json${NC}"
echo ""
echo -e "  4. Run tests:"
echo -e "     ${YELLOW}docker compose run --rm app bin/rspec${NC}"
echo ""
echo -e "  5. Run RuboCop:"
echo -e "     ${YELLOW}docker compose run --rm app bin/rubocop${NC}"
echo ""
echo -e "  6. Access Rails console:"
echo -e "     ${YELLOW}docker compose run --rm app bin/rails console${NC}"
echo ""
echo -e "${BLUE}📚 For more information, check the README.md file${NC}"
echo ""

