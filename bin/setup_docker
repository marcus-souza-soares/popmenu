#!/usr/bin/env bash
set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
echo -e "${BLUE}â•‘                                                           â•‘${NC}"
echo -e "${BLUE}â•‘            ğŸ½ï¸  PopMenu Challenge Setup                    â•‘${NC}"
echo -e "${BLUE}â•‘            Restaurant Menu Management System              â•‘${NC}"
echo -e "${BLUE}â•‘                                                           â•‘${NC}"
echo -e "${BLUE}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
echo ""

# Check if Docker is installed
if ! command -v docker &> /dev/null; then
    echo -e "${RED}âŒ Error: Docker is not installed.${NC}"
    echo -e "${YELLOW}Please install Docker from: https://docs.docker.com/get-docker/${NC}"
    exit 1
fi

# Check if Docker Compose is installed
if ! command -v docker compose &> /dev/null; then
    echo -e "${RED}âŒ Error: Docker Compose is not installed.${NC}"
    echo -e "${YELLOW}Please install Docker Compose from: https://docs.docker.com/compose/install/${NC}"
    exit 1
fi

echo -e "${GREEN}âœ… Docker and Docker Compose are installed${NC}"
echo ""

# Stop any running containers
echo -e "${YELLOW}ğŸ›‘ Stopping any running containers...${NC}"
docker compose down || true
echo ""

# Build the Docker images
echo -e "${YELLOW}ğŸ”¨ Building Docker images...${NC}"
docker compose build
echo -e "${GREEN}âœ… Docker images built successfully${NC}"
echo ""

# Create the database
echo -e "${YELLOW}ğŸ—„ï¸  Creating database...${NC}"
docker compose run --rm app bin/rails db:create
echo -e "${GREEN}âœ… Database created${NC}"
echo ""

# Run migrations
echo -e "${YELLOW}ğŸ“Š Running database migrations...${NC}"
docker compose run --rm app bin/rails db:migrate
echo -e "${GREEN}âœ… Migrations completed${NC}"
echo ""

# Seed the database
echo -e "${YELLOW}ğŸŒ± Seeding database with sample data...${NC}"
docker compose run --rm app bin/rails db:seed
echo -e "${GREEN}âœ… Database seeded${NC}"
echo ""

# Run RuboCop to check code style
echo -e "${YELLOW}ğŸ” Running RuboCop...${NC}"
docker compose run --rm app bin/rubocop
echo -e "${GREEN}âœ… RuboCop check passed${NC}"
echo ""

# Run tests
echo -e "${YELLOW}ğŸ§ª Running test suite...${NC}"
docker compose run --rm app bin/rspec
if [ $? -eq 0 ]; then
    echo -e "${GREEN}âœ… All tests passed${NC}"
else
    echo -e "${RED}âŒ Some tests failed${NC}"
    echo -e "${YELLOW}You can still continue, but you may want to check the failures.${NC}"
fi
echo ""

echo -e "${GREEN}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—${NC}"
echo -e "${GREEN}â•‘                                                           â•‘${NC}"
echo -e "${GREEN}â•‘              ğŸ‰ Setup Complete! ğŸ‰                        â•‘${NC}"
echo -e "${GREEN}â•‘                                                           â•‘${NC}"
echo -e "${GREEN}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•${NC}"
echo ""
echo -e "${BLUE}ğŸ“ Next steps:${NC}"
echo ""
echo -e "  1. Start the application:"
echo -e "     ${YELLOW}docker compose up${NC}"
echo ""
echo -e "  2. Access the application:"
echo -e "     ${YELLOW}http://localhost:3000${NC}"
echo ""
echo -e "  3. Access the API:"
echo -e "     ${YELLOW}http://localhost:3000/restaurants.json${NC}"
echo ""
echo -e "  4. Run tests:"
echo -e "     ${YELLOW}docker compose run --rm app bin/rspec${NC}"
echo ""
echo -e "  5. Run RuboCop:"
echo -e "     ${YELLOW}docker compose run --rm app bin/rubocop${NC}"
echo ""
echo -e "  6. Access Rails console:"
echo -e "     ${YELLOW}docker compose run --rm app bin/rails console${NC}"
echo ""
echo -e "${BLUE}ğŸ“š For more information, check the README.md file${NC}"
echo ""

